<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.piotr.pyszczek.ActivityTest"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageTest"
        android:layout_alignParentTop="true"
        android:src="@drawable/pytanie1"
        android:scaleType="centerCrop"
        android:layout_above="@+id/txt1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt1"
        android:textColor="#000000"
        android:layout_above="@+id/b3"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/b1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:textColor="@color/red"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/b2"
        android:layout_above="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:textColor="@color/red" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/b3"
        android:background="@color/grey"
        android:textColor="@color/red"
        android:layout_above="@+id/b2"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:layout_alignRight="@+id/txt1"
        android:layout_alignEnd="@+id/txt1" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Następne"
        android:id="@+id/next"
        android:layout_gravity="bottom"
        android:layout_alignTop="@+id/imageTest"
        android:layout_alignRight="@+id/imageTest"
        android:layout_alignEnd="@+id/imageTest"
        android:visibility="gone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poprzednie"
        android:id="@+id/prev"
        android:layout_alignTop="@+id/imageTest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kliknij proszę na odpowiedź !"
        android:textColor="@color/red"
        android:layout_above="@+id/b3"
        android:visibility="gone"/>

</RelativeLayout>
